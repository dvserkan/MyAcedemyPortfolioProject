@using MyAcedemyPortfolioProject.Models.Entity
@model List<TblExperiences>

@{ string deger = ""; string deger2 = ""; }

<div class="experience" id="experience">
    <div class="container">
        <header class="section-header text-center wow zoomIn" data-wow-delay="0.1s">
            <p>Özgeçmişim</p>
            <h2>Çalışma Deneyimim</h2>
        </header>
        @foreach (var x in Model)
        {
            if (x.ExperienceID % 2 == 0)
            {
                deger = "right";
                deger2 = "slideInright";
            }
            else
            {
                deger = "left";
                deger2 = "slideInLeft";
            }
            <div class="timeline">
                <div class="timeline-item @deger wow @deger2" data-wow-delay="0.1s">
                    <div class="timeline-text">
                        <div class="timeline-date">@x.StartYear - @x.EndYear</div>
                        <h2>@x.Title</h2>
                        <h4>@x.CompanyName, @x.Location</h4>
                        <p>
                            @x.Description
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
