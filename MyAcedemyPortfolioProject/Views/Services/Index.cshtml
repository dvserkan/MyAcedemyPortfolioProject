@using MyAcedemyPortfolioProject.Models.Entity
@model List<TblServices>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <div class="card">
                                <div class="card-header">
                                    <h2>Service List</h2>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">ID</th>
                                                <th>Icon</th>
                                                <th>Title</th>
                                                <th>Description</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var x in Model)
                                            {
                                                <tr>
                                                    <td>@x.ServicesID</td>
                                                    <td>@x.Icon</td>
                                                    <td>@x.Title</td>
                                                    <td>@x.Description</td>
                                                    <td class="text-center">
                                                        <a href="/Services/ServicesRemove/@x.ServicesID" class="btn btn-danger" style="margin-right: 15px">Delete</a>
                                                    </td>
                                                    <td class="text-center">
                                                        <a href="/Services/ServicesGet/@x.ServicesID" class="btn btn-warning" style="margin-right: 15px">Update</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">New Service Add</button>
        @*PENCERE*@
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">New Service Add Page</h2>
                    </div>
                    <form method="post" action="/Services/ServicesAdd">
                        <div class="modal-body">
                            <label>Icon</label>
                            <input type="text" name="Icon" class="form-control" />
                            <br />
                            <label>Title</label>
                            <input type="text" name="Title" class="form-control" />
                            <br />
                            <label>Description</label>
                            <input type="text" name="Description" class="form-control" />
                            <br />
                            <button class="btn btn-success" style="margin-left:25%; width:50%">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

