@using MyAcedemyPortfolioProject.Models.Entity
@model List<TblTeams>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <div class="card">
                                <div class="card-header">
                                    <h2>Team List</h2>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">ID</th>
                                                <th>Image Url</th>
                                                <th>Name Surname</th>
                                                <th>Title</th>
                                                <th>Description</th>
                                                <th>Twitter Url</th>
                                                <th>Facebook Url</th>
                                                <th>Linkedin Url</th>
                                                <th>Instagram Url</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var x in Model)
                                            {
                                                <tr>
                                                    <td>@x.TeamID</td>
                                                    <td>@x.ImageUrl</td>
                                                    <td>@x.NameSurname</td>
                                                    <td>@x.Title</td>
                                                    <td>@x.Description</td>
                                                    <td>@x.TwitterUrl</td>
                                                    <td>@x.FacebookUrl</td>
                                                    <td>@x.LinkedinUrl</td>
                                                    <td>@x.InstagramUrl</td>
                                                    <td class="text-center">
                                                        <a href="/Teams/TeamsRemove/@x.TeamID" class="btn btn-danger" style="margin-right: 15px">Delete</a>
                                                    </td>
                                                    <td class="text-center">
                                                        <a href="/Teams/TeamsGet/@x.TeamID" class="btn btn-warning" style="margin-right: 15px">Update</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">New Team Add</button>
        @*PENCERE*@
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">New Team Add Page</h2>
                    </div>
                    <form method="post" action="/Teams/TeamsAdd">
                        <div class="modal-body">
                            <label>Image Url</label>
                            <input type="text" name="NameSurname" class="form-control" />
                            <br />
                            <label>Title</label>
                            <input type="text" name="Title" class="form-control" />
                            <br />
                            <label>Description</label>
                            <input type="text" name="Description" class="form-control" />
                            <br />
                            <label>Twitter Url</label>
                            <input type="text" name="TwitterUrl" class="form-control" />
                            <br />
                            <label>Facebook Url</label>
                            <input type="text" name="FacebookUrl" class="form-control" />
                            <br />
                            <label>Linkedin Url</label>
                            <input type="text" name="LinkedinUrl" class="form-control" />
                            <br />
                            <label>Instagram Url</label>
                            <input type="text" name="InstagramUrl" class="form-control" />
                            <br />
                            <button class="btn btn-success" style="margin-left:25%; width:50%">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

